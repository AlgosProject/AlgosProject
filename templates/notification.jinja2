{% extends "base.jinja2" %}
{% block title %} Notifications {% endblock %}
{% block content %}
    <div class="body_row">
        <div class="side_block">
            <img src="../static/img/affinity_logo.png" alt="logo">
        </div>
        <div class="post_window">
            {% if notifs.__len__ == 0 %}
                {% for notif in notifs %}
                    {% include "notify_card.jinja2" %}
                {% endfor %}
            {% else %}
                <div class="card" style="width: 30rem; border:.1rem solid black">
                    <div class="card-body">
                        <h5 class="card-title">No notifications</h5>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="side_block">
        </div>

    </div>
{% endblock %}