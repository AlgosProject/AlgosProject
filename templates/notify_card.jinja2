<div class="card" style="width: 30rem; border:.1rem solid black">
    <div class="card-body">
        <h5 class="card-title">{{ notif.text }}</h5>
        {% if notif.is_chat %}
            <div class="btn">
                <form method="post" action="/notification">
                    <input type="hidden" name="notif_id" value="{{ notif.id }}">
                    <input type="hidden" name="chat_id" value="{{ notif.origin_id }}">
                    <input type="hidden" name="action" value="open_chat">
                    <button type="submit" class="btn btn-primary">
                        Chat
                    </button>
                </form>
            </div>
        {% endif %}
        {% if notif.is_friend_request %}
            <div class="btn">
                <form method="post" action="/notification">
                    <input type="hidden" name="notif_id" value="{{ notif.id }}">
                    <input type="hidden" name="friend_id" value="{{ notif.author_id }}">
                    <input type="hidden" name="action" value="accept_request">
                    <button type="submit" class="btn btn-success">
                        Accept
                    </button>
                </form>
            </div>
            <div class="btn">
                <form method="post" action="/notification">
                    <input type="hidden" name="notif_id" value="{{ notif.id }}">
                    <input type="hidden" name="friend_id" value="{{ notif.author_id }}">
                    <input type="hidden" name="action" value="decline_request">
                    <button type="submit" class="btn btn-danger">
                        Decline
                    </button>
                </form>
            </div>
        {% endif %}
    </div>
</div>