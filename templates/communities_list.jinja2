{% extends "base.jinja2" %}
{% block title %} Your Communities {% endblock %}
{% block content %}
    <div class="body_row">
        <div class="side_block_list">
            {% include "side_list.jinja2" %}
        </div>
        <div class="post_window">
            {% if posts is defined %}
                {% for post in posts %}
                    {% include "post.jinja2" %}
                {% endfor %}
            {% else %}
                <div class="card border-light mb-3" style="max-width: 25rem;">
                    <div class="card-body">
                        <p class="card-text">
                            Once you open a community posts will appear here
                        </p>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="side_block">
            <img src="../static/img/affinity_logo.png" alt="logo">
        </div>
    </div>
{% endblock %}