{% extends "base.jinja2" %}
{% block title %} Discover Friends {% endblock %}
{% block content %}
    <div class="body_row">
        <div class="side_block">
            <img src="../static/img/affinity_logo.png" alt="logo">
        </div>
        <div class="post_window">
            <a class="section_title">Pending Requests</a>
            <div class="grid_container">
                {% if empty_fr %}
                    No pending friend requests
                {% else %}
                    {% for friend in pending_fr %}
                        {% include "user_card.jinja2" %}
                    {% endfor %}
                {% endif %}
            </div>
            <a class="section_title">Suggestions</a>
            <div class="grid_container">
                {% with is_sug=True %}
                {% for friend in suggestions %}
                    {% include "user_card.jinja2" %}
                {% endfor %}
                {% endwith %}
            </div>
        </div>
        <div class="side_block">
        </div>
    </div>
{% endblock %}